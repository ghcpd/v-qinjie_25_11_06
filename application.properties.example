# Application Configuration (DO NOT COMMIT SECRETS TO VERSION CONTROL)
# Load sensitive values from environment variables

# API Configuration
api.key=${API_KEY}

# Database Configuration (use environment variables for production)
spring.datasource.url=${DB_URL:jdbc:mysql://localhost:3306/appdb}
spring.datasource.username=${DB_USER:appuser}
spring.datasource.password=${DB_PASSWORD:default_password}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.format_sql=true

# Logging Configuration (do not log sensitive data)
logging.level.root=INFO
logging.level.com.application=DEBUG
logging.level.org.hibernate.SQL=DEBUG
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n
logging.pattern.file=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
logging.file.name=logs/application.log

# Server Configuration
server.port=8080
server.servlet.context-path=/api
server.compression.enabled=true
server.compression.min-response-size=1024

# Security Headers
server.servlet.session.cookie.secure=true
server.servlet.session.cookie.http-only=true
server.servlet.session.cookie.same-site=strict

# Connection Pool Configuration
spring.datasource.hikari.maximum-pool-size=20
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.connection-timeout=30000
spring.datasource.hikari.idle-timeout=600000
spring.datasource.hikari.max-lifetime=1800000

# Application Info
spring.application.name=secure-user-app
app.version=1.0.0

# IMPORTANT: For production deployment:
# 1. Set environment variables: DB_URL, DB_USER, DB_PASSWORD, API_KEY
# 2. Do NOT commit actual credentials to version control
# 3. Use secrets management (Vault, AWS Secrets Manager, etc.)
# 4. Example Docker run:
#    docker run -e DB_USER=user -e DB_PASSWORD=pass -e API_KEY=key myapp
# 5. Example Kubernetes:
#    kubectl set env deployment/myapp DB_USER=user DB_PASSWORD=pass API_KEY=key
